[Unit]
Description=Prepare the prometheus bmc exporter container configuration
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=/usr/share/bastion_services/bmc_exporter/bmc_exporter_systemd.conf
ExecStart=/usr/bin/gen_bmc_exporter_inventory.sh
RemainAfterExit=no
Restart=on-failure
RestartSec=10
Type=oneshot

[Install]
WantedBy=default.target
