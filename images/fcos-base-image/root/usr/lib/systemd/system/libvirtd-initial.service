[Unit]
Description=Execute the initial checking after libvirtd installed
Wants=network-online.target

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStart=/bin/sh '/usr/bin/libvirt_init.sh'
Type=one-shot
RemainAfterExit=no
KillMode=none

[Install]
WantedBy=default.target